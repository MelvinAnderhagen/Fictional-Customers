@model Fictional_Customers.Models.Assignments

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Assignments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignmentsId" />
            <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stack" class="control-label"></label>
                <select asp-for="Stack" class="form-control" asp-items="Html.GetEnumSelectList<Assignments.StackType>()"></select>
                <span asp-validation-for="Stack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgLang" class="control-label"></label>
                <input asp-for="ProgLang" class="form-control" />
                <span asp-validation-for="ProgLang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
