@model IEnumerable<Fictional_Customers.Models.Assignments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assignments</h1>

@if (User.Identity.IsAuthenticated)
{
    <div class="text-end">
            <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Assignment</a>
        </div>
}
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th>
                Employee(s)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgLang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task)
            </td>
            <td>
                @item.GetAllEmployees()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgLang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                <div class="text-end">
                <a asp-action="Details" asp-route-id="@item.AssignmentsId" class="btn btn-primary" ><i class="bi bi-info-square"></i> &nbsp; Details</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.AssignmentsId" class="btn btn-success"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a> 
                         
                        <a asp-action="Delete" asp-route-id="@item.AssignmentsId" class="btn btn-danger"><i class="bi bi-trash"></i> &nbsp; Delete</a>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
